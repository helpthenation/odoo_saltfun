<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="view_baseball_event_tree" model="ir.ui.view">
            <field name="name">baseball.event.tree</field>
            <field name="model">baseball.event</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">

                <tree string="Event">
                    <field name="name"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="venue_id"/>
                </tree>
            </field>
        </record>


        <record id="view_baseball_event_form" model="ir.ui.view">
            <field name="name">baseball.event.form</field>
            <field name="model">baseball.event</field>
            <field name="arch" type="xml">
                <form string="Events">
                <sheet>
                    <div class="oe_title oe_left">
                        <h1>
                            <field name="name" placeholder="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="venue_id"/>
                    </group>
                    <field name="description"/>
                </sheet>
                </form>
            </field>
        </record>

    <record model="ir.ui.view" id="view_baseball_event_calendar">
        <field name="name">baseball.event.calendar</field>
        <field name="model">baseball.event</field>
        <field name="arch" type="xml">
            <calendar string="Event Calendar"
                      date_start="start_time"
                      date_stop="end_time"
                      >
                <field name="name"/>
            </calendar>
        </field>
    </record>

        <record model="ir.actions.act_window" id="baseball_list_events">
            <field name="name">Events</field>
            <field name="res_model">baseball.event</field>
            <field name="view_mode">calendar,tree,form</field>
        </record>



        <menuitem id="menu_events" name="Events"
                  parent="menu_others"
                  action="baseball_list_events"/>

	</data>
</odoo>

