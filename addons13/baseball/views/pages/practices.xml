<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


<template id="team_practice" name="Team practices details page">
  <t t-call="website.layout">
      <t t-set="additional_title">Team practices details</t>
      <div id="wrap">
        <div class="oe_structure"/>
          <div class="container">
            <div class='row'>
              <div class="col-lg-12">
                <div class="panel panel-default">
                  <div class="panel-heading"><h3 class="panel-title">Prochain entra√Ænement<span t-field="team.name"/></h3></div>
                  <div class="panel-body">
                      <t t-foreach="practices" t-as="practice">
                        <a t-att-href="'/practice/details/%s'% (practice.id)">
                          <div class='row'>
                            <div class="col-lg-4 col-xs-4">
                              <span t-field="practice.start_time" t-field-options='{"format": "dd/MM/yy"}'/>
                            </div>
                            <div class="col-lg-4 col-xs-4">
                              <span t-field="practice.start_time" t-field-options='{"format": "HH:mm"}'/>
                            </div>
                            <div class="col-lg-4 col-xs-4">
                              <span t-field="practice.venue_id.name"/>
                            </div>
                          </div>
                        </a>
                      </t>
                  </div>
                </div>  
              </div>
            </div>
          </div>
      </div>
  </t>
</template>


<template id="practice_details" name="Practice details page">
  <t t-call="website.layout">
      <t t-set="additional_title">Practice details</t>
      <div id="wrap">
        <div class="oe_structure"/>
          <div class="container">
            <div class='row'>
              <div class="col-lg-12">
                <div class="panel panel-default">
                  <div class="panel-heading"><h3 class="panel-title"><span t-field="practice.team_id.name"/> - <span t-field="practice.start_time"/> @ <span t-field="practice.venue_id.name"/></h3></div>
                  <div class="panel-body">

                    <div class="row">
                     <div class="col-md-10">
                        <H4><span  t-field="practice.venue_id.name" /></H4>
                     </div>
                     <div class="col-md-4">
                          <span t-if="practice.venue_id.street" ><span t-field="practice.venue_id.street"/><br/></span>
                          <span t-if="practice.venue_id.street2" ><span t-field="practice.venue_id.street2"/><br/></span>
                          <span t-if="practice.venue_id.zip_code" ><span t-field="practice.venue_id.zip_code"/> </span>
                          <span t-if="practice.venue_id.city" ><span t-field="practice.venue_id.city"/><br/></span>
                     </div>
                     <div class="col-md-4">
                      <t t-if="practice.venue_id">
          <iframe width="100%" height="200" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" t-attf-src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=#{practice.venue_id.street} #{practice.venue_id.street2}, #{practice.venue_id.zip_code} #{practice.venue_id.city}&amp;ie=UTF8&amp;z=15&amp;t=m&amp;iwloc=near&amp;output=embed"></iframe>
                      </t>
                     </div>
                    </div>
                    <t t-foreach="practice.section_ids or []" t-as="section">
                      <h4><span t-field="section.name"/> (<span t-field="section.duration" t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>)</h4>
                         <ul> 
                            <t t-foreach="section.line_ids" t-as="exercice">
                                <li>
                                  <h5><span data-toggle="collapse" t-att-href="'#practice-drill-detail-%s' % (exercice.id)" class="accordion-toggle collapsed" t-field="exercice.drill_id.name"/></h5>
                                  <div t-att-id="'practice-drill-detail-%s' % (exercice.id)" class="accordion-body collapse">
                                    <p t-if="exercice.drill_id.skill_ids">
                                      Skills: <span t-esc="', '.join(exercice.drill_id.skill_ids.mapped('name'))"/>
                                    </p>
                                    <p t-if="exercice.drill_id.material_ids">
                                      Material: <span t-esc="', '.join(exercice.drill_id.material_ids.mapped('name'))"/>
                                    </p>
                                    <p t-field="exercice.drill_id.description"/>
                                  </div>
                              </li> 
                            </t>
                        </ul> 
                    </t>
                  </div>
                </div>  
              </div>
            </div>
          </div>
      </div>
  </t>
</template>
  </data>
</odoo>