<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Scheduler for Event Alarm-->
        <record forcecreate="True" id="ir_cron_update_season" model="ir.cron">
            <field name="name">Update season calendar</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field name="model_id" ref="model_baseball_game"/>
            <field name="code">model.action_get_games_database()</field>
            <!--<field eval="'(False,)'" name="args" />-->
        </record>

        <record forcecreate="True" id="ir_cron_invite_players" model="ir.cron">
            <field name="name">Create invitation</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field name="model_id" ref="model_baseball_game"/>
            <field name="code">model.invite_upcoming(7)</field>
        </record>

    <record forcecreate="True" id="ir_cron_remind_officals" model="ir.cron">
        <field name="name">Remind officials</field>
        <field eval="True" name="active" />
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field eval="False" name="doall" />
        <field name="model_id" ref="model_baseball_game"/>
        <field name="code">model.remind_officials(3)</field>
    </record>

        <record id="mail.ir_cron_module_update_notification" model="ir.cron">
            <field name="active" eval="False" />
        </record>

    </data>
</odoo>