<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_chain_parameters" model="ir.ui.view">
        <field name="name">Chain parameters</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="after">
                <page name="CHAIN" string="CHAIN">
                    <group>
                        <field name="remote_db"/>
                        <field name="remote_url"/>
                        <field name="remote_company_id"/>
                        <field name="remote_product_name"/>
                    </group>
                    <group>
                        <field name="remote_user"/>
                        <field name="remote_pass" password="True"/>
                    </group>
                    <group>
                        <button name="reset_remote_id" string="Reinicia ID Remoto" type="object"
                                class="oe_highlight oe_read_only"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
