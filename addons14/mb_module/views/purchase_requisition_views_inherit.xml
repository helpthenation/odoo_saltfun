<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_requisition_inherit" model="ir.ui.view">
            <field name="name">purchase.requisition.form.extend</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state' and @widget='statusbar']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,open" />
                </xpath>

                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="applicant"/>
                </xpath>

                <xpath expr="//field[@name='vendor_id']" position="before">
                    <field name="business_unit"/>
                </xpath>

                <xpath expr="//field[@name='product_description_variants']" position="replace">
                    <field string="Description" name="product_description_variants"
                           attrs="{'invisible': [('product_description_variants', '=', '')], 'readonly': [('parent.state', '!=', 'draft')]}"/>
                </xpath>

                <xpath expr="//button[@name='action_done']" position="before">
                    <button name="%(list_order_tree)d" states="open" string="PV de Validation" type="action"
                            class="btn-primary"/>
                    <button name="%(pv_vaidation)d" states="to approve" string="Contrôle de Gestion" type="action"
                            class="btn-primary" groups="mb_module.mb_control"/>
                </xpath>

                <xpath expr="//button[@name='action_open']" position="replace">
                    <button name="action_open" states="in_progress" string="Sélection des offres" type="object"
                            class="btn-primary"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="before">
                    <button name="%(bdc_signature)d" states="sign" string="Signature de la direction" type="action"
                            class="btn-primary" groups="mb_module.mb_manager"/>
                </xpath>
		
		<xpath expr="//field[@name='date_end']" position="replace">
                    <field name="date_end" string="Date d'échéance" attrs="{'readonly': [('state','not in',('draft','in_progress','open','ongoing'))]}"/>
                </xpath>

                <xpath expr="//field[@name='ordering_date']" position="replace">
                    <field name="ordering_date" string="Date d'achat" attrs="{'readonly': [('state','not in',('draft','in_progress','open','ongoing'))]}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
