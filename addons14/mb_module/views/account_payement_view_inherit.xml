<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form.extend</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_check_printing.view_account_payment_form_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_number']" position="replace" />
            <xpath expr="//field[@name='cheque_reference']" position="replace">
                <field name="cheque_reference" string="Numéro de chèque"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>


        </field>
    </record>
</odoo>