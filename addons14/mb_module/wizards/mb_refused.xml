<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mb_refused_form" model="ir.ui.view">
        <field name="name">mb.refused.wizard</field>
        <field name="model">mb.refused</field>
        <field name="arch" type="xml">
            <form string="Refuser">
                <group>
                    <field name="expensive"
                           attrs="{'invisible': ['|',('other','=',True),('improper','=',True)]}"/>
                    <field name="improper"
                           attrs="{'invisible': ['|',('expensive','=',True),('other','=',True)]}"/>
                    <field name="other"
                           attrs="{'invisible': ['|',('expensive','=',True),('improper','=',True)]}"/>
                    <field name="refused_note"/>
                </group>
                <footer>
                    <button name="mb_refused" string="Confirmer" type="object" class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="mb_refused" model="ir.actions.act_window">
        <field name="name">Refuser</field>
        <field name="res_model">mb.refused</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mb_refused_form"/>
        <field name="target">new</field>
    </record>
</odoo>