<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="devis_recu_form" model="ir.ui.view">
        <field name="name">mb.devisrecu.wizard</field>
        <field name="model">mb.devisrecu</field>
        <field name="arch" type="xml">
            <form string="Devis Reçu">
                <group>
                    <field name="file" filename="file_name" string="Télécharger votre fichier"/>
                    <field name="file_name" invisible="1"/>
                    <field name="devi_recu_note"/>
                </group>
                <footer>
                    <button name="devi_recu" string="Ajouter" type="object" class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="devis_recu" model="ir.actions.act_window">
        <field name="name">Devis Reçu</field>
        <field name="res_model">mb.devisrecu</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="devis_recu_form"/>
        <field name="target">new</field>
    </record>
</odoo>